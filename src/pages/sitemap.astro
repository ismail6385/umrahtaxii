---
import Layout from "../layouts/Layout.astro";
import {
    routes,
    hotels,
    ziyaratTours,
    countryPages,
} from "../data/knowledge-graph";

const airportRoutes = routes.filter((r) => r.type === "airport");
const intercityRoutes = routes.filter((r) => r.type === "intercity");

// Group hotels by city
const hotelsMakkah = hotels.filter((h) => h.city === "Makkah");
const hotelsMadinah = hotels.filter((h) => h.city === "Madinah");

const schema = {
    "@context": "https://schema.org",
    "@type": "SiteNavigationElement",
    name: "Umrah Taxi Site Map",
    about: "Comprehensive guide to Umrah transport services including airport transfers, hotel taxis, and ziyarat tours.",
    url: Astro.url.href,
};
---

<Layout
    title="Sitemap | Umrah Taxi Authority"
    description="Browse all our services: Airport Transfers, City to City Taxis, Hotel Transfers, Ziyarat Tours and Country-specific packages."
    schema={schema}
>
    <section class="pt-32 pb-20 bg-black min-h-screen">
        <div class="container mx-auto px-4">
            <h1
                class="text-4xl md:text-5xl font-bold text-center text-white mb-4"
            >
                Umrah Taxi <span class="text-gold">Authority Map</span>
            </h1>
            <p class="text-gray-400 text-center mb-16 max-w-2xl mx-auto">
                Navigate our complete network of premium transport services
                across Jeddah, Makkah, Madinah & Taif.
            </p>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Level 1: Airport Transfers -->
                <div
                    class="bg-gray-900/50 p-8 rounded-2xl border border-white/10 hover:border-gold/30 transition-colors"
                >
                    <h2
                        class="text-2xl font-bold text-white mb-6 flex items-center gap-3"
                    >
                        <span class="text-gold">‚úàÔ∏è</span> Airport Transfers
                    </h2>
                    <ul class="space-y-3">
                        {
                            airportRoutes.map((route) => (
                                <li>
                                    <a
                                        href={`/${route.slug}`}
                                        class="text-gray-400 hover:text-gold transition-colors flex items-center gap-2"
                                    >
                                        <span class="text-xs text-emerald">
                                            ‚óè
                                        </span>{" "}
                                        {route.originId.includes("jeddah")
                                            ? "Jeddah Airport"
                                            : "Madinah Airport"}{" "}
                                        to{" "}
                                        {route.destinationId.replace(
                                            "-city",
                                            "",
                                        )}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Level 1: City to City -->
                <div
                    class="bg-gray-900/50 p-8 rounded-2xl border border-white/10 hover:border-gold/30 transition-colors"
                >
                    <h2
                        class="text-2xl font-bold text-white mb-6 flex items-center gap-3"
                    >
                        <span class="text-gold">üèôÔ∏è</span> City Transfers
                    </h2>
                    <ul class="space-y-3">
                        {
                            intercityRoutes.map((route) => (
                                <li>
                                    <a
                                        href={`/${route.slug}`}
                                        class="text-gray-400 hover:text-gold transition-colors flex items-center gap-2"
                                    >
                                        <span class="text-xs text-emerald">
                                            ‚óè
                                        </span>{" "}
                                        {route.mainKeyword}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Level 1: Hotel Transfers -->
                <div
                    class="bg-gray-900/50 p-8 rounded-2xl border border-white/10 hover:border-gold/30 transition-colors"
                >
                    <h2
                        class="text-2xl font-bold text-white mb-6 flex items-center gap-3"
                    >
                        <span class="text-gold">üè®</span> Hotel Transfers
                    </h2>

                    <h3
                        class="text-gold font-bold mb-3 uppercase text-sm tracking-wider"
                    >
                        Makkah Hotels
                    </h3>
                    <ul class="space-y-2 mb-6">
                        {
                            hotelsMakkah.map((hotel) => (
                                <li>
                                    <a
                                        href={`/hotels/${hotel.city.toLowerCase()}/${hotel.slug}`}
                                        class="text-gray-400 hover:text-gold transition-colors block"
                                    >
                                        {hotel.name}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>

                    <h3
                        class="text-gold font-bold mb-3 uppercase text-sm tracking-wider"
                    >
                        Madinah Hotels
                    </h3>
                    <ul class="space-y-2">
                        {
                            hotelsMadinah.map((hotel) => (
                                <li>
                                    <a
                                        href={`/hotels/${hotel.city.toLowerCase()}/${hotel.slug}`}
                                        class="text-gray-400 hover:text-gold transition-colors block"
                                    >
                                        {hotel.name}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Level 1: Ziyarat Tours -->
                <div
                    class="bg-gray-900/50 p-8 rounded-2xl border border-white/10 hover:border-gold/30 transition-colors"
                >
                    <h2
                        class="text-2xl font-bold text-white mb-6 flex items-center gap-3"
                    >
                        <span class="text-gold">üïå</span> Ziyarat Tours
                    </h2>
                    <ul class="space-y-3">
                        {
                            ziyaratTours.map((tour) => (
                                <li>
                                    <a
                                        href={`/ziyarat/${tour.slug}`}
                                        class="text-gray-400 hover:text-gold transition-colors flex items-center gap-2"
                                    >
                                        <span class="text-xs text-emerald">
                                            ‚óè
                                        </span>{" "}
                                        {tour.name}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Level 1: Pilgrim Authority -->
                <div
                    class="bg-gray-900/50 p-8 rounded-2xl border border-white/10 hover:border-gold/30 transition-colors"
                >
                    <h2
                        class="text-2xl font-bold text-white mb-6 flex items-center gap-3"
                    >
                        <span class="text-gold">üåç</span> International Pilgrims
                    </h2>
                    <ul class="space-y-3">
                        {
                            countryPages.map((page) => (
                                <li>
                                    <a
                                        href={`/countries/${page.slug}`}
                                        class="text-gray-400 hover:text-gold transition-colors flex items-center gap-2"
                                    >
                                        <span class="text-xs text-emerald">
                                            ‚óè
                                        </span>{" "}
                                        {page.title}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>
</Layout>
