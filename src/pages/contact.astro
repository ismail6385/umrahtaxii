---
import Layout from "../layouts/Layout.astro";

const title = "Contact Us | Umrah Taxi Saudi Arabia";
const description =
    "Get in touch with us for bookings, inquiries, or support. Available 24/7 via WhatsApp and Email.";
---

<Layout title={title} description={description}>
    <section class="pt-32 pb-20 bg-black min-h-screen">
        <div class="container max-w-4xl mx-auto">
            <h1
                class="text-4xl md:text-5xl font-bold text-center text-white mb-12"
            >
                Contact <span class="text-gold">Us</span>
            </h1>

            <div class="grid md:grid-cols-2 gap-8">
                <!-- Contact Info -->
                <div
                    class="bg-gray-900/50 p-8 rounded-2xl border border-white/10"
                >
                    <h2 class="text-2xl font-bold text-white mb-6">
                        Get in Touch
                    </h2>
                    <p class="text-gray-400 mb-8">
                        We are available 24/7 to assist you. The fastest way to
                        reach us is via WhatsApp.
                    </p>

                    <div class="space-y-6">
                        <a
                            href="https://wa.me/13073464572"
                            class="flex items-center gap-4 group p-4 rounded-xl bg-white/5 hover:bg-white/10 transition-colors"
                        >
                            <div
                                class="w-12 h-12 rounded-full bg-emerald/20 flex items-center justify-center text-emerald-400"
                            >
                                <svg
                                    class="w-6 h-6"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        d="M12.031 6.172c-3.181 0-5.767 2.586-5.768 5.766-.001 1.298.38 2.27 1.019 3.287l-.711 2.592 2.654-.696c1.005.54 1.932.884 2.809.884 3.185 0 5.771-2.586 5.771-5.767 0-3.18-2.587-5.766-5.774-5.766zm.92 8.875c-.385.195-2.27.185-2.553.185-.28 0-.57-.042-.71-.24-.135-.192-.54-1.206-.54-1.206s-.284-.654.14-1.077c.425-.423 1.135.096 1.135.096s.14.192.57.192c.43 0 2.22-.96 2.22-.96s.284-.192.568-.097c.28.096.7.385.7.385s.28.192.28 1.154c0 .963-.56 1.39-1.39 1.57zM12 2C6.48 2 2 6.48 2 12c0 1.84.54 3.55 1.47 5.01L2 22l4.99-1.47C8.45 21.46 10.16 22 12 22c5.52 0 10-4.48 10-10S17.52 2 12 2z"
                                    ></path></svg
                                >
                            </div>
                            <div>
                                <div class="text-sm text-gray-400">
                                    WhatsApp (Recommended)
                                </div>
                                <div
                                    class="text-white font-bold group-hover:text-gold transition-colors"
                                >
                                    +1 (307) 346-4572
                                </div>
                            </div>
                        </a>

                        <a
                            href="mailto:booking@umrahtaxi.site"
                            class="flex items-center gap-4 group p-4 rounded-xl bg-white/5 hover:bg-white/10 transition-colors"
                        >
                            <div
                                class="w-12 h-12 rounded-full bg-blue-500/20 flex items-center justify-center text-blue-400"
                            >
                                <svg
                                    class="w-6 h-6"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path></svg
                                >
                            </div>
                            <div>
                                <div class="text-sm text-gray-400">
                                    Email Support
                                </div>
                                <div
                                    class="text-white font-bold group-hover:text-gold transition-colors"
                                >
                                    booking@umrahtaxi.site
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Support Availability -->
                <div
                    class="bg-gray-900/50 p-8 rounded-2xl border border-white/10 flex flex-col justify-center"
                >
                    <h2 class="text-2xl font-bold text-white mb-4">
                        Need Immediate Assistance?
                    </h2>
                    <p class="text-gray-400 mb-6">
                        Our support team is active 24/7 to help you with
                        bookings, changes, or flight delays.
                    </p>

                    <div
                        class="bg-black/40 p-4 rounded-xl border border-white/5 mb-6"
                    >
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-gray-400 text-sm"
                                >Response Time</span
                            >
                            <span class="text-emerald text-sm font-bold"
                                >~2 mins</span
                            >
                        </div>
                        <div class="w-full bg-gray-800 rounded-full h-2">
                            <div class="bg-emerald h-2 rounded-full w-[95%]">
                            </div>
                        </div>
                    </div>

                    <a
                        href="https://wa.me/13073464572"
                        class="btn btn-primary w-full py-4 text-center rounded-xl font-bold text-lg flex items-center justify-center gap-2"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M12.031 6.172c-3.181 0-5.767 2.586-5.768 5.766-.001 1.298.38 2.27 1.019 3.287l-.711 2.592 2.654-.696c1.005.54 1.932.884 2.809.884 3.185 0 5.771-2.586 5.771-5.767 0-3.18-2.587-5.766-5.774-5.766zm.92 8.875c-.385.195-2.27.185-2.553.185-.28 0-.57-.042-.71-.24-.135-.192-.54-1.206-.54-1.206s-.284-.654.14-1.077c.425-.423 1.135.096 1.135.096s.14.192.57.192c.43 0 2.22-.96 2.22-.96s.284-.192.568-.097c.28.096.7.385.7.385s.28.192.28 1.154c0 .963-.56 1.39-1.39 1.57zM12 2C6.48 2 2 6.48 2 12c0 1.84.54 3.55 1.47 5.01L2 22l4.99-1.47C8.45 21.46 10.16 22 12 22c5.52 0 10-4.48 10-10S17.52 2 12 2z"
                            ></path></svg
                        >
                        Chat on WhatsApp
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
