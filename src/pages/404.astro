---
import Layout from "../layouts/Layout.astro";

const title = "Page Not Found | Umrah Taxi Saudi Arabia";
const description =
    "The page you are looking for does not exist. Please return to the homepage or contact us.";
---

<Layout title={title} description={description}>
    <section
        class="min-h-screen bg-black flex items-center justify-center text-center px-4"
    >
        <div class="space-y-8 animate-fade-in">
            <div class="text-gold text-9xl font-bold font-heading">404</div>
            <h1 class="text-4xl md:text-5xl font-bold text-white">
                Page Not Found
            </h1>
            <p class="text-xl text-gray-400 max-w-lg mx-auto">
                The page you are looking for might have been removed, had its
                name changed, or is temporarily unavailable.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/"
                    class="btn btn-primary bg-gold text-black px-8 py-3 rounded-full font-bold hover:bg-white transition-colors"
                >
                    Back to Home
                </a>
                <a
                    href="/contact"
                    class="px-8 py-3 rounded-full font-bold text-white border border-white/20 hover:bg-white/10 transition-colors"
                >
                    Contact Support
                </a>
            </div>
        </div>
    </section>
</Layout>
